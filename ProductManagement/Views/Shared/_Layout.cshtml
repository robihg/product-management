<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Product Management</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
<body>

    <!-- ✅ Always Keep a Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Product Management</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                @if (Context.Request.Cookies["AuthToken"] != null)
                {
                    
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">Logout</a>
                    </li>
                }
                else
                {
                   
                }
            </ul>
        </div>
    </nav>

    <!-- ✅ Main Content (Always Required) -->
    <div class="container mt-5">
        @RenderBody()
    </div>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
